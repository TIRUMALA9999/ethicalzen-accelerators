{
  "id": "medical_advice_blocker_v1",
  "name": "Medical Advice Blocker",
  "description": "Prevents AI from providing medical diagnoses, treatment recommendations, or prescriptions",
  "version": "1.0.0",
  "category": "medical",
  
  "metrics": {
    "diagnosis_risk": {
      "description": "Risk of providing unauthorized medical diagnosis (0=safe, 1=diagnosis detected)",
      "type": "float",
      "range": [0, 1],
      "invert_score": false,
      "threshold": {
        "min": 0.0,
        "max": 0.1,
        "action": "block"
      }
    }
  },
  
  "feature_extractors": {
    "diagnosis_risk": {
      "type": "pattern",
      "extractor": {
        "keywords": [
          "you have",
          "diagnosed with",
          "prescription",
          "take this medication",
          "I recommend",
          "treatment plan",
          "medical diagnosis",
          "you are diagnosed",
          "prescribe",
          "dosage"
        ],
        "case_sensitive": false
      }
    }
  },
  
  "metadata": {
    "author": "ethicalzen",
    "created_at": "2025-11-11T00:00:00Z",
    "tags": ["medical", "diagnosis", "prescription", "compliance"]
  }
}
